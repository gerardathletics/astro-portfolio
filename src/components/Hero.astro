---
import BadgeSocial from '../components/BadgeSocial.astro';

import { IconBrandGithub, IconBrandLinkedin, IconBrandX, IconBrandFlickr, IconFileDescription, IconMapPin, IconFileCv, IconMail } from '@tabler/icons-react';

import { getI18N } from '../i18n/index.ts';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const email = 'gerardporras@gmail.com';
const name = 'Gerard';
---

<div style="min-height: 100vh" class="flex flex-col items-center sm-justify-stretch md:justify-flex-start lg:justify-stretch 2xl:justify-center">
    <!-- Profile Picture -->
    <img
        src="./me.webp"
        alt="Gerard"
        class="glow-on-hover object-cover object-top aspect-square rounded-full border-4 border-white shadow-lg w-52 h-52 md:w-52 md:h-52 lg:w-64 lg:h-64 xl:w-70 xl:h-70 mb-4 mt-4 md:mt-8"
    />

    <!-- Hero Content -->
    <h1 class="font-black w-full text-center text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-5xl">
        {i18n.PRESENTATION_TITLE_1}{i18n.PRESENTATION_TITLE_2}
    </h1>
    <div class="text-center sm:flex items-center sm:space-x-2 mt-4">
        <span class="text-lg sm:text-xl md:text-2xl font-semibold">
            {i18n.PRESENTATION_DESCRIPTION}
        </span>
    </div>
    <div class="flex gap-2 mt-4 justify-center">
        <span class="text-sm flex items-center gap-1 w-max text-center">
            <IconMapPin width={16} />
            <span class="hidden sm:block">Utrecht - NL</span><span class="sm:hidden">Utrecht - NL</span> • GMT+2 • @gerardathletics
        </span>
    </div>
    <div class="mt-6 max-w-[700px] text-md sm:text-xl px-4">
        <p class="text-pretty text-center">
            {i18n.PARAGRAPH_DESCRIPTION}
        </p>
        <div class="mt-4 flex gap-2 flex-wrap justify-center">
            <!-- Social Links -->
            <BadgeSocial href={`mailto:${email}`} class="" title={`Send an email to ${name} - ${email}`}>
                <span class="hidden sm:block"> Email </span>
                <IconMail width={16} />
            </BadgeSocial>
            <BadgeSocial href="https://www.linkedin.com/in/gerardathetics/" class="">
                <span class="hidden sm:block"> Linkedin </span>
                <IconBrandLinkedin width={16} />
            </BadgeSocial>
            <BadgeSocial href="https://github.com/gerardathletics/" class="">
                <span class="hidden sm:block"> GitHub </span>
                <IconBrandGithub width={16} />
            </BadgeSocial>
            <BadgeSocial href="https://twitter.com/gerardathletics" class="">
                <span class="hidden sm:block"></span>
                <IconBrandX width={16} />
            </BadgeSocial>
            <BadgeSocial href="https://www.flickr.com/photos/188226047@N04/albums/72157714104865581/" class="">
                <span class="hidden sm:block">Maps</span>
                <IconBrandFlickr width={16} />
            </BadgeSocial>
            <BadgeSocial href="https://gerardathletics.github.io/minimalist-cv-gerard/" class="">
                <span class="hidden sm:block">CV</span>
                <IconFileCv width={16} />
            </BadgeSocial>
        </div>
    </div>
</div>

<style>
    .glow-on-hover {
        transition: box-shadow 0.3s ease-in-out;
    }

    .glow-on-hover:hover {
        box-shadow: 0 0 20px white;
    }
</style>
