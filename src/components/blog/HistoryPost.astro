---
import { IconPointFilled, IconChevronRight } from '@tabler/icons-react';

export const DataPost = [
    {
        date: 'January 5, 2024',
        title: 'This is a test title',
        description: 'Explore the latest trends in the world of technology and learn how to make your business more efficient.',
        link: '/',
    },
];
---

<div class="relative sm:pb-12 sm:ml-[calc(2rem+1px)] md:ml-[calc(3.5rem+1px)] lg:ml-[max(calc(14.5rem+1px),calc(100%-48rem))]">
    <div class="absolute top-3 bottom-0 right-full mr-7 md:mr-[3.20rem] border border-white/20 sm:block"></div>
    <div class="space-y-16">
        {
            DataPost.map((DataPost) => (
                <article class="relative group">
                    <div class="absolute -inset-y-2.5 -inset-x-0 rounded-md border-2 border-white/20 bg-white/5 group-hover:bg-white/10 transition-all " />
                    <IconPointFilled className="hidden absolute right-full mr-4 text-gray-400 md:mr-10 w-6 h-6 overflow-visible sm:block" />
                    <div class="relative px-4">
                        <h3 class="line-clamp-2 text-lg font-bold pt-8 lg:pt-0">{DataPost.title}</h3>
                        <div class="mt-2 mb-4 line-clamp-2 text-pretty">
                            <p>{DataPost.description}</p>
                        </div>
                        <div class="absolute left-0 top-0 ms-4 lg:ms-0 lg:left-auto lg:right-full lg:mr-24">
                            <span class="whitespace-nowrap text-sm leading-6 text-white/50">
                                <time>{DataPost.date}</time>
                            </span>
                        </div>

                        <a class="text-sm text-white/50 font-medium group-hover:text-white" href={DataPost.link}>
                            <span class="group-hover:animate-move-left flex items-center">
                                Explore more
                                <IconChevronRight stroke={2.5} className="h-full w-4 overflow-visible ml-1" />
                            </span>
                            <span class="absolute -inset-y-2.5 -inset-x-0 rounded-md animate-none" />
                        </a>
                    </div>
                </article>
            ))
        }
    </div>
</div>
