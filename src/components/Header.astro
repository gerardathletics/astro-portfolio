---
import { getI18N } from '@/i18n';
import Navbar from '@/components/Navbar.tsx';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

let ruta = '';
if (currentLocale !== 'en') {
    ruta = `${currentLocale}/`;
}

const links = [
    { text: `${i18n.HEADER.NAVBAR.HOME}`, url: `/${ruta}#${i18n.HEADER.NAVBAR.HOME}` },
    { text: `${i18n.HEADER.NAVBAR.EXPERIENCE}`, url: `/${ruta}#${i18n.HEADER.NAVBAR.EXPERIENCE}` },
    { text: `${i18n.HEADER.NAVBAR.PROJECTS}`, url: `/${ruta}#${i18n.HEADER.NAVBAR.PROJECTS}` },
    { text: `${i18n.HEADER.NAVBAR.ATHLETICS}`, url: `/${ruta}#${i18n.HEADER.NAVBAR.ATHLETICS}` },
    { text: 'Blog', url: '/blog' },
];
