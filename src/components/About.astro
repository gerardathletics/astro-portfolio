---
import { getI18N } from '../i18n';
import { Image } from 'astro:assets';
import runningImage from '../assets/me/spain-nl-yl2.webp';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const about = i18n.SECTION_AB.ABOUT;
---

<div id="about-me" class="mt-12 mx-auto max-w-4xl">
    <h2 class="text-2xl font-bold mb-4 flex items-center gap-2">
        <span>{about.TITLE}</span>
        <div class="flex-grow h-0.5 bg-gray-300"></div>
    </h2>
    <div class="relative">
        <div class="md:float-right md:ml-8 md:mb-4 md:max-w-[50%] w-full">
            <Image src={runningImage} alt="Running" class="w-full h-auto rounded-lg" />
        </div>
        <div class="text-gray-200">
            {
                about.DESCRIPTION.map((paragraph) => (
                    <p class="mb-6">
                        {paragraph.map((segment: any) => (
                            <span class={segment.type === 'highlight' ? 'font-semibold text-yellow-200' : ''}>{segment.text}</span>
                        ))}
                    </p>
                ))
            }
        </div>
